{
    "name": "meysammaghsoudi/bale-messenger",
    "description": "پکیج لاراول برای ارسال پیام‌های زیبا به پیام‌رسان بله با پشتیبانی از قالب‌بندی پیشرفته و Message Builder",
    "keywords": [
        "laravel",
        "bale",
        "messenger",
        "bot",
        "notification",
        "iran",
        "persian"
    ],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Meysam Maghsoudi",
            "email": "safir.1987@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/notifications": "^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "meysammaghsoudi\\BaleMessenger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "meysammaghsoudi\\BaleMessenger\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "meysammaghsoudi\\BaleMessenger\\BaleMessengerServiceProvider"
            ],
            "aliases": {
                "Bale": "meysammaghsoudi\\BaleMessenger\\Facades\\Bale"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
